            //                                     ┗━━━━━━━━━━━┻━━━━━━━━━━━┻━━━━━━━━━━━┛   ┗━━━━━━━━━━━┻━━━━━━━━━━━┻━━━━━━━━━━━┛

            bindings = <
       &kp Q           &kp W           &kp E             &kp R        &kp T        &kp Y            &kp U        &kp I              &kp O            &kp P
       &mt LEFT_WIN A  &mt LEFT_ALT S  &mt LEFT_SHIFT D  &mt LCTRL F  &kp G        &kp H            &mt RCTRL J  &mt RIGHT_SHIFT K  &mt RIGHT_ALT L  &mt RIGHT_WIN SEMICOLON
&kp Z  &kp A           &kp X           &kp C             &kp V        &kp B        &kp N            &kp M        &kp COMMA          &kp DOT          &kp FSLH                 &kp BSLH
                                       &kp DELETE        &kp SPACE    &lt 1 TAB    &lt 2 BACKSPACE  &kp RETURN   &kp ESCAPE
